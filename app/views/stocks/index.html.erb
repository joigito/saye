<p id="notice"><%= notice %></p>

<h1><center>Mecánica SAYE</center></h1>

<h2>Archivo de Productos y Trabajos</h2>

<table>
  <thead>
    <tr>
      <th>Descripción</th>
      <th>$ Costo</th>
      <th>$ Venta</th>
      <th>Cantidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.productootrabajo %></td>
        <td><%= stock.precosto %></td>
        <td><%= stock.preventa %></td>
        <td><%= stock.cantidad %></td>
        <td><%= link_to 'Ver', stock %></td>
        <td><%= link_to 'Modificar', edit_stock_path(stock) %></td>
        <td><%= link_to 'Eliminar', stock, method: :delete, data: { confirm: 'Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Producto o Trabajo', new_stock_path %>
